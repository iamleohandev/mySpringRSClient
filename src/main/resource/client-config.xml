<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- Step1: configure the first JMS component, a connection factory that 
		direct to the Message Broker -->
	<bean id="connectionFactory" class="org.apache.activemq.spring.ActiveMQConnectionFactory">
		<property name="brokerURL" value="tcp://localhost:61616"></property>
	</bean>

	<!-- Step2: configure the second JMS component, a destination that is realted 
		to the Message Broker -->
	<bean id="queue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="my.jms.service.queue"></constructor-arg>
	</bean>

	<!-- Step3: configure the JmsInvokerProxyFactory -->
	<bean id="sampleService"
		class="org.springframework.jms.remoting.JmsInvokerProxyFactoryBean">
		<property name="connectionFactory" ref="connectionFactory"></property>
		<property name="queueName" value="my.jms.service.queue"></property>
		<property name="serviceInterface" value="com.leo.han.services.SampleService">
		</property>
	</bean>
</beans>
